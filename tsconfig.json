{
"compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ESNext",
    "types": ["jest", "node"],
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
},
"include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
],
    "exclude": ["node_modules/", "dist/"]
}
